<div class="container d-inline-flex p-2 text-align-center">
  <h1>Faites votre nouvelle <em>list</em> ci-dessous</h1>

    <%= simple_form_for @list do |f| %>
      <%= f.input :name %>
      <%= f.button :submit, class: "mt-4 btn btn-outline-success"%>
    <% end %>

  <%= link_to 'Back to lists', lists_path, class: "mt-4 btn btn-outline-info"%>
</div>
